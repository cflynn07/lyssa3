form.horizontal-form(name       = "newEmployeeManualAddForm"
                     novalidate)
  h3.form-section Employee Info
  .row-fluid
    .span6
      .control-group(data-ng-class = "{success:newEmployeeManualAddForm.firstName.$valid, error:!newEmployeeManualAddForm.firstName.$valid, 'ng-pristine':newEmployeeManualAddForm.firstName.$pristine}")
        label.control-label(for = "firstName") First Name
        .controls.input-icon
          input.m-wrap.span10(type              = "text"
                              required
                              data-ng-model     = "viewModel.newEmployeeManualAddForm.firstName"
                              data-ng-minlength = "{{clientOrmShare.employee.model.firstName.validate.len[0]}}"
                              data-ng-maxlength = "{{clientOrmShare.employee.model.firstName.validate.len[1]}}"
                              name              = "firstName"
                              placeholder       = "Jane")
          span.input-success(data-ng-show = "newEmployeeManualAddForm.firstName.$dirty && newEmployeeManualAddForm.firstName.$valid")
            i.icon-ok
          span.input-error(data-ng-show = "newEmployeeManualAddForm.firstName.$dirty && newEmployeeManualAddForm.firstName.$invalid")
            i.icon-exclamation-sign
          span.help-inline(data-ng-show = "newEmployeeManualAddForm.firstName.$error.minlength")
            | First name must be longer than {{clientOrmShare.employee.model.firstName.validate.len[0]}} characters
          span.help-inline(data-ng-show = "newEmployeeManualAddForm.firstName.$error.maxlength")
            | First name must be shorter than {{clientOrmShare.employee.model.firstName.validate.len[1]}} characters
    .span6
      .control-group(data-ng-class = "{success:newEmployeeManualAddForm.lastName.$valid, error:!newEmployeeManualAddForm.lastName.$valid, 'ng-pristine':newEmployeeManualAddForm.lastName.$pristine}")
        label.control-label(for = "lastName") Last Name
        .controls.input-icon
          input.m-wrap.span10(type              = "text"
                              required
                              data-ng-model     = "viewModel.newEmployeeManualAddForm.lastName"
                              data-ng-minlength = "{{clientOrmShare.employee.model.lastName.validate.len[0]}}"
                              data-ng-maxlength = "{{clientOrmShare.employee.model.lastName.validate.len[1]}}"
                              name              = "lastName"
                              placeholder       = "Doe")
          span.input-success(data-ng-show = "newEmployeeManualAddForm.lastName.$dirty && newEmployeeManualAddForm.lastName.$valid")
            i.icon-ok
          span.input-error(data-ng-show = "newEmployeeManualAddForm.lastName.$dirty && newEmployeeManualAddForm.lastName.$invalid")
            i.icon-exclamation-sign
          span.help-inline(data-ng-show = "newEmployeeManualAddForm.lastName.$error.minlength")
            | Last name must be longer than {{clientOrmShare.employee.model.lastName.validate.len[0]}} characters
          span.help-inline(data-ng-show = "newEmployeeManualAddForm.lastName.$error.maxlength")
            | Last name must be shorter than {{clientOrmShare.employee.model.lastName.validate.len[1]}} characters

