  .row-fluid(style="display:none;")
    .span6
      .control-group
        label.control-label(for="delegate") Delegate
        .controls
          .controls
            label.checkbox.line
              .checker
                span(data-ng-class = "{checked: viewModel.newEmployeeManualAddForm.delegate}"
                     data-ng-click = "viewModel.newEmployeeManualAddForm.delegate = !viewModel.newEmployeeManualAddForm.delegate")
                  input(type          = "checkbox"
                        data-ng-model = "viewModel.newEmployeeManualAddForm.delegate"
                        name          = "delegate")
              | This employee is a delegate
            span.help-inline This will create an account for your delegate to log-in and submit exercises

  .form-actions(data-ng-init = "viewModel.newEmployeeManualAddForm.submitting = false;")
    button.btn.pull-right(data-ng-class    = "{true:'black',false:'green'}[viewModel.newEmployeeManualAddForm.submitting]"
                          data-ng-disabled = "newEmployeeManualAddForm.$invalid || viewModel.newEmployeeManualAddForm.submitting"
                          data-ng-click    = "viewModel.showAddNewEmployeeSubmit()"
                          type             = "submit")
      p(data-ng-hide = "viewModel.newEmployeeManualAddForm.submitting")
        i.icon-ok.m-icon-white
        |&nbsp;Add Employee
      p(data-ng-show = "viewModel.newEmployeeManualAddForm.submitting")
        i.icon-cog.icon-spin
        |&nbsp;Saving...
